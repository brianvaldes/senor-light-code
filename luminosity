#include <Arduino.h>
#include <Wire.h>
#include <ArdusatSDK.h>

ArdusatSerial serialConnection(SERIAL_MODE_HARDWARE_AND_SOFTWARE, 8, 9);

Luminosity lum;

void setup(void)
{
  serialConnection.begin(9600);

  lum.begin();

  serialConnection.println("");
}

void loop(void)
{

  lum.read();

  serialConnection.println(lum.toJSON("luminosity"));

  delay(100);
}
